generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // host -pooler para app
  directUrl = env("DIRECT_URL") // host direto para migrações
}

model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Turma {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
}
