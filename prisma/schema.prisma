generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL") // use o HOST *-pooler.* (PgBouncer) para a app
  directUrl         = env("DIRECT_URL")   // use o HOST sem *-pooler.* para migrações
}

model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
